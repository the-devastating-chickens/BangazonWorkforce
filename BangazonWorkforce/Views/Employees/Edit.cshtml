@model BangazonWorkforce.Models.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Employee.FirstName @Model.Employee.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Departments</label>
                <select asp-for="Employee.DepartmentId" asp-items="@Model.AvailableDepartmentsSelectList"></select>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label">Current Computer</label>
                <h1 asp-for="Computer.Make">@Model.Computer.Make</h1>
            </div>
            <div class="form-group">
                <label class="control-label">Assign New Computer</label>
                <select asp-for="CurrentComputerId" asp-items="@Model.AvailableComputersSelectList"></select>
                <span asp-validation-for="CurrentComputerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
